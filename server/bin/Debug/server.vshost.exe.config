<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.serviceModel>
    <bindings>
      <basicHttpBinding >
        <binding maxBufferSize="2147483647" maxReceivedMessageSize="2147483647"></binding>
      </basicHttpBinding>
    </bindings>    
    <behaviors>
      <serviceBehaviors>
        <behavior name="newBehavior">
          <serviceMetadata httpGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <services>
      <service behaviorConfiguration="newBehavior" name="server.Server">
        <endpoint binding="basicHttpBinding" contract="server.IServer" />
        <host>
          <baseAddresses>
            <add baseAddress="http://192.168.1.3/service" />
          </baseAddresses>
        </host>
      </service>
    </services>
  </system.serviceModel>
</configuration>